@model IEnumerable<TestMyselfToday.Models.Test>

@{
    ViewBag.Title = "Index";
}


<style type="text/css">
    .panel-grid {
        margin-top: 10px;
        overflow: auto;
    }
</style>

<div class="col-md-12">
    <div class="panel panel-grid">
        <div class="panel-success">
            <div class="panel-heading">
                Tests
            </div>

            <div class="panel-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>
                <table class="table table-condensed table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            Language
                        </th>
                        <th>
                            Section
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DateAndTime)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Language.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Section.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateAndTime)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

