@model IEnumerable<TestMyselfToday.Models.CommonDictionary>

@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    .panel-grid {
        margin-top: 10px;
        overflow: auto;
    }
</style>

<div class="col-md-12">
    <div class="panel panel-grid">
        <div class="panel-success">
            <div class="panel-heading">
                Common-Dictionary
            </div>

            <div class="panel-body">
                <p>
                    @Html.ActionLink("Create New", "Create")
                </p>


                <table class="table table-condensed table-hover table-bordered table-responsive">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CDKey)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CDValue)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SortOrder)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Language.Title)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CDKey)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CDValue)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SortOrder)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Language.Title)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
    </div>
</div>
