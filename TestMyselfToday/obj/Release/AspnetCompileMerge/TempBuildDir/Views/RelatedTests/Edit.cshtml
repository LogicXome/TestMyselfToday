@model TestMyselfToday.Models.RelatedTest

@{
    ViewBag.Title = "Edit";
}

<style type="text/css">
    .panel-edit {
        margin-top: 10px;
    }
</style>


<div class="col-md-12">
    <div class="panel-edit">
        <div class="panel panel-success">
            <div class="panel-heading">
                Related Test {Edit}
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Title
                            </label>
                            <div class="col-md-10">
                                @Html.DropDownList("TestId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.TestId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Related Test
                            </label>
                            <div class="col-md-10">
                                @Html.DropDownList("RelatedTestId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RelatedTestId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-2">
                                Order
                            </label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.SortOrder, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.SortOrder, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
